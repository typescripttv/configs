{
  "devDependencies": {
    "@evilmartians/lefthook": "1.6.14",
    "@types/node": "20.13.0",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "lerna": "8.1.3",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "name": "@tstv/configs",
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap --reject-cycles",
    "clean": "lerna run clean --parallel",
    "dist": "lerna run dist",
    "fix": "prettier --ignore-path .gitignore \"**/*.{md,json,html,ts}\" --write",
    "prerelease": "yarn fix",
    "release": "yarn install && yarn dist && lerna publish && yarn clean",
    "test": "lerna run --no-sort --concurrency 8 test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
